<!DOCTYPE html>
<html lang="en">
<head>
<link rel="stylesheet" href="/css/init.css">
<link rel="stylesheet" href="/css/sidebar.css">
<link rel="stylesheet" href="/css/header_footer.css">
<link rel="stylesheet" href="/css/coordinador/cargaAcademica.css">
<link rel="stylesheet" href="/css/coordinador/representante.css">
<meta charset="UTF-8">
</head>
<body>
<header>
    <div id="left-header">
        <a href="#"><img src="/images/logo.png" alt="logo"></a>
        <h1>Santa Marta</h1>
    </div>

    <!-- OPCIONES DEL HEADER ACA -->
    <div id="right-header">
        <a href="/auth/logout">Salir</a>

    <div>
</header>

<nav id="sidebar">
    <!-- OPCIONES DE LA SIDEBAR ACA -->
    <a href="/coordinador">Inicio</a>
    <a href="/coordinador/periodo">Periodos</a>
    <a href="/coordinador/asignatura">Asignaturas</a>
    <a href="/coordinador/carga-academica" class="actual-link-sidebar">Cargas Académicas</a>
    <a href="/coordinador/inscripcion">Inscripción</a>
    <a href="/coordinador/calificaciones">Calificaciones</a>
    <a href="/coordinador/docente">Docentes</a>
    <a href="/coordinador/estudiante">Estudiantes</a>
    <a href="/coordinador/representante">Representantes</a>
</nav>

<main class="content-main">

<div class="header-main">
    <h2>Cargas Academicas</h2>
    <a href="/coordinador/carga-academica/crear" class="nuevo">Nueva Carga</a>
</div>

<div class="card-buscar">
    <h3>Buscar Docente</h3>
    <form action="/coordinador/carga-academica/buscar" method="GET">
        <input type="text" name="docente" placeholder="Ingrese cédula del docente">
        <input type="submit" value="Buscar">
    </form>
</div>

<% if (data.docente) { %>

<div class="card-tabla">
    <h3>Profesor: </h3>
    <table>
        <tr>
            <th>Cedula</th>
            <th>Nombre Completo</th>
        </tr>
        <tr>
            <td><%= data.docente.cedula%></td>
            <td>
                <%= data.docente.primer_nombre%>
                <%= data.docente.segundo_nombre%>
                <%= data.docente.primer_apellido%>
                <%= data.docente.segundo_apellido%>
            </td>
        </tr>
    </table>
    <div class="header-inside" style="margin-top: 10px;">
        <h3>Cargas Academicas</h3>
    </div>
    <table>
        <tr>
            <th>Materia</th>
            <th>Año</th>
            <th>Sección</th>
            <th></th>
        </tr>

        <% data.cargas.forEach(carga => { %>
            <tr>
                <td><%= carga.materia%></td>
                <td><%= carga.anio%></td>
                <td><%= carga.seccion%></td>
                <td><a href="/coordinador/carga-academica/editar/<%=carga.carga_id%>">Actualizar</a></td>
            </tr>
        <% }) %>

    </table>
</div>
<% } %> 
</main>

<footer>
    <p>&copy; 2024. Colegio Santa Marta. Todos los derechos reservados.</p>
</footer>

</body>
</html>